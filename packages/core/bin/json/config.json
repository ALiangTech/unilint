{
  "ts-vue-eslint-alloy": {
    "name": "ts-vue-eslint-alloy",
    "type": "eslint",
    "config": {
      "root": true,
      "env": {
        "browser": true
      },
      "parser": "vue-eslint-parser",
      "parserOptions": {
        "parser": {
          "js": "@babel/eslint-parser",
          "jsx": "@babel/eslint-parser",
          "ts": "@typescript-eslint/parser",
          "tsx": "@typescript-eslint/parser"
        }
      },
      "extends": [
        "alloy",
        "alloy/vue",
        "alloy/typescript"
      ],
      "rules": {
        "@typescript-eslint/prefer-optional-chain": "off"
      }
    },
    "packages": [
      "@babel/core",
      "@babel/eslint-parser",
      "@typescript-eslint/eslint-plugin",
      "@typescript-eslint/parser",
      "@vue/eslint-config-typescript",
      "eslint",
      "eslint-config-alloy",
      "eslint-plugin-vue",
      "vue-eslint-parser"
    ]
  },
  "css-vue-stylelint": {
    "name": "css-vue-stylelint",
    "config": {
      "root": true,
      "extends": [
        "stylelint-config-standard",
        "stylelint-config-standard-vue"
      ],
      "rules": {
        "declaration-property-value-no-unknown": true
      }
    },
    "packages": [
      "stylelint",
      "stylelint-config-standard",
      "stylelint-config-standard-vue"
    ]
  },
  "prettier": {
    "name": "prettier",
    "config": {
      "semi": true
    },
    "packages": [
      "prettier"
    ]
  }
}