{
  "name": "ts-vue-eslint-alloy",
  "config": {
    "root": true,
    "env": {
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:vue/vue3-recommended"
    ],
    "plugins": [
      "@typescript-eslint",
      "vue"
    ],
    "rules": {},
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
          "ecmaVersion": 2021,
          "sourceType": "module",
          "project": "./tsconfig.json"
        }
      },
      {
        "files": [
          "*.vue"
        ],
        "parser": "vue-eslint-parser",
        "parserOptions": {
          "parser": "@typescript-eslint/parser",
          "ecmaVersion": 2021,
          "sourceType": "module",
          "project": "./tsconfig.json",
          "extraFileExtensions": [
            ".vue"
          ]
        }
      }
    ]
  },
  "packages": [
    "vue-eslint-parser",
    "eslint",
    "@typescript-eslint/parser",
    "eslint-config-alloy"
  ]
}